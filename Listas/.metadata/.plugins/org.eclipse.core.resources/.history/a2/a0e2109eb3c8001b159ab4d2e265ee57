package Aplication;

import java.util.ArrayList;
import java.util.List;
import java.util.Locale;
import java.util.Scanner;

import Entities.Cadastro;

public class Programa {

	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		List <Cadastro> list = new ArrayList<>();
		
		System.out.println("Informe a quantidade de funcionários: ");
		int n = sc.nextInt();
		
		for(int i = 0; i < n; i++) {
			System.out.printf("Funcionario #%d"+i);
			System.out.printf("\nId: ");
			String id = sc.nextLine();			
			
			System.out.printf("\nNome: ");
			String nome = sc.nextLine();
			
			System.out.printf("\nSalario: ");
			double salario = sc.nextDouble();
			
			list = (List<Cadastro>) new Cadastro(id, nome, salario);
		}
		
		
		
		
		sc.close();
	}

}
